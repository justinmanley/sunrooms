name:                classification-tool
version:             0.1.0.0
synopsis:            A UI for quickly classifying buildings in Chicago.
author:              Justin Manley
maintainer:          manleyjster@gmail.com
category:            Web
build-type:          Simple
cabal-version:       >=1.10

executable classification-tool
  main-is:             Main.hs
